@font-face {
    font-family: "icon";
    src: url('data:application/x-font-woff2;charset=utf-8;base64,') format('woff2');
}

.icon-post::before {
    content: "\e619";
}

.toPost {
    position: fixed;
    right: 15px;
    bottom: 15px;
    width: 45px;
    height: 45px;
    border-radius: 50%;
    background: linear-gradient(to right, #276bc8, #7896d7);
    opacity: 0.9;
    line-height: 45px;
    text-align: center;
    color: rgba(255, 255, 255, 0.9);
    font-size: 20px;
    overflow: hidden;
}
