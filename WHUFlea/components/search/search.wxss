.search {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    background: #fff;
    z-index: 1;
}

.search::after {
    display: none;
    content: " ";
    position: absolute;
    bottom: 0;
    right: 0;
    left: 0;
    height: 1px;
    border-bottom: 1px solid #eee;
    transform-origin: 0 100%;
    transform: scaleY(0.5);
}

.search-box {
    display: block;
    position: relative;
    background: #f2f2f2;
    text-align: center;
    font-size: 14px;
}
