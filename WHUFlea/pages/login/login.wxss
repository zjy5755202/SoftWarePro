@font-face {
    font-family: "icon";
    src: url('data:application/x-font-woff2;charset=utf-8;base64,') format('woff2');
}

.icon-login::before {
    content: "\e6a7";
}

page {
    position: relative;
    height: 100%;
    background: #fff;
}

.cover {
    position: relative;
    width: 100%;
    height: 100%;
    background: #276bc8;
}

.cover-gif {
    position: absolute;
    bottom: 598rpx;
    width: 100%;
    height: 120rpx;
    mix-blend-mode: screen;
    z-index: 1;
}

.form {
    display: flex;
    flex-direction: column;
    justify-content: center;
    position: absolute;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 600rpx;
    background: #fff;
}

.inputs {
    position: relative;
    left: 50rpx;
    margin-right: 100rpx;
    border-radius: 30rpx;
    overflow: hidden;
}

.inputs input {
    position: relative;
    box-sizing: border-box;
    padding: 0 45rpx;
    width: 100%;
    height: 112rpx;
    background: #eee;
    line-height: 112rpx;
    font-size: 38rpx;
}

.inputs input:last-child::before {
    content: " ";
    position: absolute;
    top: 0;
    left: 45rpx;
    right: 0;
    height: 1px;
    border-top: 1px solid #e0e0e0;
    transform-origin: 0 100%;
    transform: scaleY(0.5);
    z-index: 1;
}

button {
    position: relative;
    margin-top: 80rpx;
    width: 140rpx;
    height: 140rpx;
    background: linear-gradient(to right, #276bc8, #7896d7);
    border-radius: 50%;
}

button text {
    display: block;
    line-height: 140rpx;
    text-align: center;
    color: rgba(255, 255, 255, 0.9);
    font-size: 60rpx;
}
