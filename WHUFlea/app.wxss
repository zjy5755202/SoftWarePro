@font-face {
    font-family: "WeChatNum";
    src: url("https://campuses-whu.oss-cn-shanghai.aliyuncs.com/fonts/WeChatNum.otf");
}

.icon {
    font-family: "icon" !important;
    font-style: normal;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
}

page {
    position: relative;
    background: #f1f1f1;
}

.button {
    position: relative;
    padding: 20px 0;
    width: 100%;
}

button {
    padding: 0;
    background: transparent;
    border: 0;
}

button::after {
    border: none;
}

/* 块状按钮 */

button.block {
    left: 15px;
    margin-right: 30px;
    height: 45px;
    background: #276bc8 !important;
    border-radius: 6px;
    line-height: 45px;
    font-size: 17px;
    color: #fff;
}
