@import "/assets/wxss/cells.wxss";

@font-face {
    font-family: "icon";
    src: url('data:application/x-font-woff2;charset=utf-8;base64,') format('woff2');
}

.icon-demands:before {
    content: "\e617";
}

.icon-products:before {
    content: "\e645";
}

.icon-collections:before {
    content: "\e675";
}

.cover {
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    top: 0;
    left: 0;
    width: 100%;
    height: 230px;
    background: #276bc8;
}

.cover-user {
    width: 80px;
    height: 80px;
    border-radius: 50%;
    border: 4px solid rgba(255, 255, 255, 0.4);
    overflow: hidden;
}

.cover-gif {
    position: absolute;
    bottom: 0;
    width: 100%;
    height: 120rpx;
    mix-blend-mode: screen;
    z-index: 1;
}

.apps {
    display: flex;
    justify-content: space-between;
    position: relative;
    padding: 15px 0 18px 0;
    background: #fff;
}

.app {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 30%;
}

.app-icon {
    color: #276bc8;
    font-size: 35px;
    opacity: 0.85;
}

.app-name {
    margin-top: 5px;
    font-size: 15px;
}
